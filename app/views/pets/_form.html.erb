<%= form_for(@food) do |f| %>
<div class="row">
  <div class="small-10 small-center columns">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
</div>

<div class="row">
  <div class="small-10 small-center columns">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
</div>

<div class="row">
  <div class="small-10 small-center columns">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>
</div>

<div class="row">
  <div class="small-10 small-center columns">
    <div class="actions">
    <%= f.submit "Submit"%>
    </div>
  </div>
</div>
<% end %>
